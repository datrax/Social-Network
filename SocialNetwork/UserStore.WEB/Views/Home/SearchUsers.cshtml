@model IEnumerable<UserStore.Models.UserModel>

<div  >
    @if (Model.Any())
    {
        <div class="text-center">
          
        </div>
    }
    @foreach (var item in @Model)
    {
        <div style="margin-bottom: 5px;">
            <img src="/Home/ViewImage/@item.Id" onerror="this.src = '/Content/user-default.png'" style="width: 50px; height: 50px"/>
            @Html.ActionLink(@item.Name + " " + @item.Surname, "UserPage", new {id = item.Login})
        </div>
    }
</div>